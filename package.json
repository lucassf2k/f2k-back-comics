{
  "name": "f2k-back-comics",
  "version": "1.0.0",
  "description": "An API rest to distribute comics to both readers and creators",
  "main": "dist/infrastructure/main.js",
  "scripts": {
    "build": "tsc --project tsconfig-build.json && tsc-alias",
    "start": "node --env-file .env .",
    "start:cluster": "node --env-file .env dist/cluster.js",
    "start:dev": "nodemon --watch --env-file .env 'src/' --exec 'ts-node -r tsconfig-paths/register src/infrastructure/main.ts' -e ts",
    "start:debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/infrastructure/main.js",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "pnpm test -- --watch",
    "test:coverage": "pnpm test -- --coverage"
  },
  "keywords": [],
  "author": {
    "email": "lucassilved@gmail.com",
    "name": "Lucas Vinicius (lucassf2k)",
    "url": "https://github.com/lucassf2k"
  },
  "engines": {
    "node": "20.x"
  },
  "license": "MIT",
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg-promise": "^11.5.4",
    "swagger-ui-express": "^5.0.0",
    "ulid": "^2.3.0"
  }
}
